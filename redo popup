<script>
document.addEventListener("DOMContentLoaded", function () {
    const dateEl = document.querySelector(".ops-hidden-date");
    if (!dateEl) return;

    const postDate = new Date(dateEl.textContent.trim());
    const now = new Date();
    const sevenDaysAgo = new Date();
    sevenDaysAgo.setDate(now.getDate() - 7);

    if (postDate >= sevenDaysAgo) {
        if (typeof elementorProFrontend !== "undefined") {
            elementorProFrontend.modules.popup.showPopup({ id: 12961 });
        } else {
            console.warn("Elementor Pro frontend not loaded.");
        }
    }
});
</script>
